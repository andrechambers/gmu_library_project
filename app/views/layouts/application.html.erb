<!DOCTYPE html>
<html>
<head>
  <title>Shaw Books <%= yield :title %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= render '/layouts/header' %>
  </div>
  <div class="container">
    <div class="col-xs-9">
      <%= render '/shared/flashes' %>
      <%= yield %>
    </div>
    <% if session[:user_id]  %>
      <div class="col-xs-3">
        <%= render '/layouts/sidebar' %>
      </div>
    <% end %>
  </div>
  <%= render '/layouts/footer' %>
</body>
</html>